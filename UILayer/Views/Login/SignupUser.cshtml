<div>
    <section>
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center  mt-5 mb-5">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body">

                            <div class="row justify-content-center p-5">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-3">Sign up</p>

                                    <form class="mx-1 mt-1" asp-action="SignUpUser" asp-controller="Login">

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-group flex-fill mb-0 mx-2">
                                                <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" autocomplete="off" required/>
                                                <span asp-validation-for="Username" class="text-danger"></span>
                                            </div>
                                       </div>
                                        <div class="d-flex flex-row align-items-center  mb-2 ">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-group flex-fill mb-0  mx-2">
                                                <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" required/>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-group flex-fill mb-0 mx-2">
                                                <input type="text" asp-for="EmployeeId" placeholder="Employee ID" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center  mb-2 ">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-group flex-fill mb-0  mx-2">
                                                <input type="email" asp-for="Email" placeholder="Enter email" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="Email" class="text-danger">@ViewBag.alert</span>
                                            </div>
                                        </div>
                                          <div class="form-group">
                                            <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Create" />
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src=https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</div>

